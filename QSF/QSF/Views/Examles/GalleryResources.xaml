<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="QSF.Views.GalleryResources">

    <OnPlatform x:Key="labelHeader_FontSize" x:TypeArguments="x:Double">
        <On Platform="iOS">10</On>
        <On Platform="Android, UWP">14</On>
    </OnPlatform>

    <Style x:Key="labelHeaderStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#757575" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource labelHeader_FontSize}" />
        <Setter Property="FontFamily" Value="{StaticResource MediumFont}" />
    </Style>
</ResourceDictionary>