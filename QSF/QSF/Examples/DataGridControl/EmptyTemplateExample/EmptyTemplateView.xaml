<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerikDataGrid="clr-namespace:Telerik.XamarinForms.DataGrid;assembly=Telerik.XamarinForms.DataGrid"
             x:Class="QSF.Examples.DataGridControl.EmptyTemplateExample.EmptyTemplateView">
    <ContentView.Resources>
        <DataTemplate x:Key="EmptyContentTemplate">
            <Image Source="{Binding EmptyContentImage, Converter={StaticResource ImageSourceConverter}}"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </DataTemplate>
    </ContentView.Resources>

    <telerikDataGrid:RadDataGrid x:Name="dataGrid"
                                 AutoGenerateColumns="False"
                                 UserGroupMode="Disabled"
                                 ItemsSource="{Binding ItemsSource}"
                                 EmptyContentTemplate="{StaticResource EmptyContentTemplate}"
                                 EmptyContentDisplayMode="{Binding EmptyContentDisplayMode}" />
</ContentView>
